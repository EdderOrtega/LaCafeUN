<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - La Cafe</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoFinalPOO2.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                @* Logo - siempre visible *@
                @if (Context.Session.GetInt32("UsuarioId") != null || Context.Session.GetInt32("AdminId") != null)
                {
                    <a class="navbar-brand" asp-controller="Home" asp-action="Dashboard">
                        <img src="/images/lacafeLogoRed.png" width="100" alt="La Cafe Logo" />
                    </a>
                }
                else
                {
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        <img src="/images/lacafeLogoRed.png" width="100" alt="La Cafe Logo" />
                    </a>
                }
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    
                    @* MENÚ CUANDO ESTÁ AUTENTICADO *@
                    @if (Context.Session.GetInt32("UsuarioId") != null || Context.Session.GetInt32("AdminId") != null)
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Dashboard">
                                    <i class="bi bi-house-door me-1"></i>Inicio
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Menu" asp-action="Index">
                                    <i class="bi bi-card-list me-1"></i>Ver Menú
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="AgregarProducto" asp-action="Index">
                                    <i class="bi bi-plus-circle me-1"></i>Agregar Producto
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Pedidos" asp-action="Index">
                                    <i class="bi bi-cart me-1"></i>Pedidos
                                </a>
                            </li>
                        </ul>
                        
                        @* PERFIL DEL USUARIO AUTENTICADO *@
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color: #831D81;">
                                    @if (!string.IsNullOrEmpty(Context.Session.GetString("UsuarioFoto")))
                                    {
                                        <img src="@Context.Session.GetString("UsuarioFoto")" alt="Foto de perfil" class="rounded-circle me-2" width="35" height="35" style="object-fit: cover; border: 2px solid #F1592A;" />
                                    }
                                    else
                                    {
                                        <div class="rounded-circle me-2 d-flex align-items-center justify-content-center" style="width: 35px; height: 35px; background: linear-gradient(135deg, #831D81, #F1592A); color: white; font-size: 16px; font-weight: bold; border: 2px solid #F1592A;">
                                            @{
                                                var nombre = Context.Session.GetString("UsuarioNombre") ?? Context.Session.GetString("AdminNombre") ?? "U";
                                            }
                                            @nombre.Substring(0, 1).ToUpper()
                                        </div>
                                    }
                                    <span class="fw-bold">
                                        @{
                                            var nombreCompleto = Context.Session.GetString("UsuarioNombre") ?? Context.Session.GetString("AdminNombre") ?? "Usuario";
                                        }
                                        @nombreCompleto
                                    </span>
                                    @if (Context.Session.GetInt32("AdminId") != null)
                                    {
                                        <span class="badge bg-danger ms-2">Admin</span>
                                    }
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow-lg" aria-labelledby="userDropdown" style="border-radius: 15px; border: 2px solid #F1592A;">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Perfil" style="color: #831D81;">
                                            <i class="bi bi-person-circle me-2"></i>Mi Perfil
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li class="px-3 py-2">
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn w-100 text-white" style="background: linear-gradient(135deg, #831D81, #F1592A); border-radius: 10px; padding: 10px; font-weight: 600; transition: all 0.3s ease;">
                                                <i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    }
                    else
                    {
                        @* MENÚ CUANDO NO ESTÁ AUTENTICADO *@
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house-door me-1"></i>Inicio
                                </a>
                            </li>
                        </ul>
                        
                        @* BOTONES DE LOGIN Y REGISTRO *@
                        <ul class="navbar-nav">
                            <li class="nav-item me-2">
                                <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Login" style="border-radius: 10px; padding: 8px 20px; border: 2px solid #831D81; color: #831D81; font-weight: 600; transition: all 0.3s ease;">
                                    <i class="bi bi-person-circle me-1"></i>Iniciar Sesión
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn text-white" asp-controller="Account" asp-action="Registro" style="background: linear-gradient(135deg, #831D81, #F1592A); border-radius: 10px; padding: 8px 20px; font-weight: 600; transition: all 0.3s ease;">
                                    <i class="bi bi-person-plus me-1"></i>Registrarse
                                </a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show shadow-sm" style="border-left: 5px solid #28a745; border-radius: 10px;">
                    <i class="bi bi-check-circle me-2"></i>@TempData["Mensaje"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show shadow-sm" style="border-left: 5px solid #dc3545; border-radius: 10px;">
                    <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center py-3">
            <p class="mb-2">&copy; 2025 - La Cafe - Sistema de Cafetería</p>
            <p class="small">
                <a asp-controller="Home" asp-action="Privacy" class="text-decoration-none" style="color: #831D81;">Acerca de nosotros</a>
                <span class="mx-2">|</span>
                <a href="/api/docs" class="text-decoration-none" style="color: #F1592A;">Documentación API</a>
            </p>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
<style>
    footer {
        margin-bottom: 0;
        margin-bottom: 0;
    }
    /* Efectos hover para botones de la navbar */
    .btn-outline-primary:hover {
        background: #831D81 !important;
        color: white !important;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(131, 29, 129, 0.3);
    }

    .navbar-nav .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(241, 89, 42, 0.4);
    }

    /* Efecto hover en dropdown items */
    .dropdown-item:hover {
        background: linear-gradient(135deg, #831D81, #F1592A);
        color: white !important;
    }

    /* Botón cerrar sesión hover */
    .dropdown-menu form button:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 20px rgba(131, 29, 129, 0.4);
    }

    /* Animación para el dropdown */
    .dropdown-menu {
        animation: slideDown 0.3s ease;
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Badge admin */
    .badge {
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%, 100% {
            opacity: 1;
        }

        50% {
            opacity: 0.7;
        }
    }
</style>
</body>
</html>
