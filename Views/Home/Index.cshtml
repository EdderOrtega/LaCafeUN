@{
    ViewData["Title"] = "Bienvenido";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <!-- Bienvenidos primero -->
                <h1 class="display-3 fw-bold text-white mb-4">¡Bienvenidos!</h1>
                
                <!-- Logo L A  C A FÉ en grande -->
                <div class="logo-custom mb-4">
                    <span class="logo-l">L</span><span class="logo-a">A</span>
                    <span class="logo-c">C</span><span class="logo-a2">A</span><span class="logo-fe">FÉ</span>
                </div>
                
                <!-- Subtexto -->
                <p class="lead text-white mb-5 mx-auto" style="max-width: 700px;">
                    El mejor café y comida para toda la comunidad universitaria. Sabor, calidad y tradición en cada bocado.
                </p>
                
                <!-- Imagen de Linci centrada -->
                <div class="mb-4">
                    <img src="/images/linciBarista.png" alt="Mascota La Cafe" class="img-fluid hero-image" style="max-width: 350px;">
                </div>
                
                <!-- Botones abajo de la imagen -->
                <div class="d-flex gap-3 justify-content-center">
                    <a href="@Url.Action("Login", "Account")" class="btn btn-morado btn-lg px-5 py-3">
                        <i class="bi bi-person-circle me-2"></i>Iniciar Sesión
                    </a>
                    <a href="@Url.Action("Registro", "Account")" class="btn btn-naranja btn-lg px-5 py-3">
                        <i class="bi bi-person-plus me-2"></i>Registrarse
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Categorías de Productos -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold text-white titulo-seccion">Nuestras Especialidades</h2>
            <p class="lead text-white  fw-bold">Descubre los mejores sabores de La Cafe</p>
        </div>

        @{
            var productosAgrupados = ViewBag.ProductosAgrupados as Dictionary<string, List<ProyectoFinalPOO2.Models.Producto>>;
            if (productosAgrupados != null && productosAgrupados.Any())
            {
                foreach (var categoria in productosAgrupados)
                {
                    <div class="mb-5">
                        <h3 class="mb-4 text-center text-white subtitulo">
                            @if (categoria.Key == "Bebidas Calientes" || categoria.Key == "Bebidas Frías") { <text>☕</text> }
                            else if (categoria.Key == "Comida") { <text>🍔</text> }
                            else if (categoria.Key == "Postres") { <text>🍰</text> }
                            else if (categoria.Key == "Snacks") { <text>🍿</text> }
                            @categoria.Key
                        </h3>
                        <div class="row row-cols-1 row-cols-md-3 g-4">
                            @foreach (var producto in categoria.Value)
                            {
                                <div class="col">
                                    <div class="card h-100 shadow-sm hover-card">
                                        @if (!string.IsNullOrEmpty(producto.ImagenUrl))
                                        {
                                            <img src="@producto.ImagenUrl" class="card-img-top" alt="@producto.Nombre" style="height: 400px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="card-img-top d-flex align-items-center justify-content-center" style="height: 400px; background: linear-gradient(135deg, #831D81 0%, #F1592A 100%);">
                                                <span class="display-1">
                                                    @if (categoria.Key.Contains("Bebidas")) { <text>☕</text> }
                                                    else if (categoria.Key == "Comida") { <text>🍔</text> }
                                                    else if (categoria.Key == "Postres") { <text>🍰</text> }
                                                    else { <text>🍽️</text> }
                                                </span>
                                            </div>
                                        }
                                        <div class="card-body">
                                            <h5 class="card-title fw-bold producto-titulo">@producto.Nombre</h5>
                                            <p class="card-text text-muted">@producto.Descripcion</p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="h4 mb-0 producto-precio">$@producto.Precio.ToString("F2")</span>
                                                <span class="badge bg-success">Disponible</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <p class="lead text-muted">Estamos preparando nuestro menú. ¡Vuelve pronto!</p>
                </div>
            }
        }

        <div class="text-center mt-5">
            <a href="@Url.Action("Login", "Account")" class="btn btn-cafeteria btn-lg px-5">
                Inicia Sesión para Ordenar
            </a>
        </div>
    </div>
</section>

<!-- Información Adicional -->
