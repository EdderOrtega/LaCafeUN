        background: linear-gradient(to right, #831D81, #F1592A);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        filter: drop-shadow(1px 0 0 white) drop-shadow(-1px 0 0 white) drop-shadow(0 1px 0 white) drop-shadow(0 -1px 0 white);
    }

    /* FÉ morada con borde blanco */
    .logo-fe {
        color: #831D81;
        -webkit-text-stroke: 1px white;
    }

    .hero-section h1,
    .hero-section p,
    .hero-section .lead {
        color: white !important;
    }

    .hero-image {
        animation: float 3s ease-in-out infinite;
        filter: drop-shadow(0 10px 20px rgba(0,0,0,0.2));
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-20px);
        }
    }

    .btn-morado {
        background: #831D81;
        color: white;
        border: 3px solid #831D81;
        font-weight: 600;
        transition: all 0.3s ease;
        border-radius: 12px;
    }

        .btn-morado:hover {
            background: #F1592A;
            border-color: #F1592A;
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(241, 89, 42, 0.4);
        }

    .btn-naranja {
        background: #F1592A;
        color: white;
        border: 3px solid #F1592A;
        font-weight: 600;
        transition: all 0.3s ease;
        border-radius: 12px;
    }

        .btn-naranja:hover {
            background: #831D81;
            border-color: #831D81;
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(131, 29, 129, 0.4);
        }

    .hover-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 2px solid #f8f9fa;
        border-radius: 15px;
        overflow: hidden;
    }

        .hover-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(131, 29, 129, 0.3) !important;
            border-color: #F1592A;
        }

    .card-img-top {
        border-radius: 15px 15px 0 0;

    }
</style>
