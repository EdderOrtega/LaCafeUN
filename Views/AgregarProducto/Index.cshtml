@model Producto

@{
    ViewData["Title"] = "Agregar Producto";
}

<div class="container-cafeteria fade-in">
    <h1 class="titulo-seccion">‚ûï Agregar Producto</h1>
    
    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    <div class="row">
        <div class="col-md-6">
            <div class="form-container">
                <h3 class="subtitulo">üìù Informaci√≥n del Producto</h3>
                
                <form asp-action="Index" method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Nombre del Producto:</label>
                        <input asp-for="Nombre" class="form-control form-control-lg" placeholder="Ej: Cappuccino" required />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">Descripci√≥n:</label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Describe el producto..."></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">Precio:</label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Precio" type="number" step="0.01" class="form-control form-control-lg" placeholder="0.00" required />
                        </div>
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold">Categor√≠a:</label>
                        <select name="categoriaId" class="form-control form-control-lg" required>
                            <option value="">-- Selecciona una categor√≠a --</option>
                            @if (ViewBag.Categorias != null)
                            {
                                foreach (var categoria in (List<ProyectoFinalPOO2.Entities.CategoriaProductoEntity>)ViewBag.Categorias)
                                {
                                    <option value="@categoria.Id">@categoria.IconoUrl @categoria.Nombre</option>
                                }
                            }
                        </select>
                    </div>
                    
                    <!-- SUBIR IMAGEN DEL PRODUCTO -->
                    <div class="mb-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-image me-2"></i>Imagen del Producto:
                        </label>
                        <input type="file" name="archivoImagen" class="form-control" accept="image/*" id="imagenProductoInput" />
                        <small class="text-muted">JPG, PNG, GIF o WEBP (m√°x. 5 MB)</small>
                        
                        <!-- Preview -->
                        <div id="imagePreviewProducto" class="mt-3 text-center" style="display: none;">
                            <img id="previewImgProducto" src="" alt="Vista previa" class="img-thumbnail" style="max-width: 250px; border-radius: 10px;" />
                            <br>
                            <button type="button" class="btn btn-sm btn-outline-danger mt-2" onclick="limpiarImagenProducto()">
                                <i class="bi bi-x-circle me-1"></i>Quitar imagen
                            </button>
                        </div>
                    </div>
                    
                    <div class="form-check mb-4">
                        <input asp-for="Disponible" class="form-check-input" checked id="disponibleCheck" />
                        <label class="form-check-label fw-bold" for="disponibleCheck">
                            ‚úÖ Disponible para venta
                        </label>
                    </div>
                    
                    <div class="d-grid">
                        <button type="submit" class="btn btn-cafeteria btn-lg">
                            <i class="bi bi-plus-circle me-2"></i>Agregar Producto
                        </button>
                    </div>
                </form>
            </div>
        </div>
        
        <div class="col-md-6">
            <h3 class="subtitulo">üì¶ Productos Registrados</h3>
            
            @if (ViewBag.Productos != null && ((List<Producto>)ViewBag.Productos).Any())
            {
                <div style="max-height: 650px; overflow-y: auto; padding-right: 10px;">
                    @foreach (var producto in (List<Producto>)ViewBag.Productos)
                    {
                        <div class="producto-card mb-3 p-3">
                            <div class="row align-items-center">
                                @if (!string.IsNullOrEmpty(producto.ImagenUrl))
                                {
                                    <div class="col-4">
                                        <img src="@producto.ImagenUrl" alt="@producto.Nombre" 
                                             class="img-fluid rounded shadow-sm" 
                                             style="height: 120px; width: 100%; object-fit: cover;" />
                                    </div>
                                    <div class="col-7">
                                        <h5 class="producto-titulo mb-1">@producto.Nombre</h5>
                                        <p class="producto-descripcion text-muted mb-2 small">@producto.Descripcion</p>
                                        <p class="producto-precio mb-1 h5">$@producto.Precio.ToString("N2")</p>
                                        <small class="text-muted">
                                            üè∑Ô∏è @producto.Categoria
                                        </small>
                                        <br>
                                        @if (producto.Disponible)
                                        {
                                            <span class="badge bg-success mt-1">‚úÖ Disponible</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary mt-1">‚ùå No disponible</span>
                                        }
                                    </div>
                                    <div class="col-1 text-end">
                                        <form asp-action="Eliminar" method="post" style="display: inline;" 
                                              onsubmit="return confirm('¬øSeguro que deseas eliminar @producto.Nombre?')">
                                            <input type="hidden" name="id" value="@producto.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </form>
                                        </div>
                                }
                                else
                                {
                                    <div class="col-11">
                                        <h5 class="producto-titulo mb-1">@producto.Nombre</h5>
                                        <p class="producto-descripcion text-muted mb-2">@producto.Descripcion</p>
                                        <p class="producto-precio mb-1 h5">$@producto.Precio.ToString("N2")</p>
                                        <small class="text-muted">
                                            üè∑Ô∏è @producto.Categoria
                                        </small>
                                        <br>
                                        @if (producto.Disponible)
                                        {
                                            <span class="badge bg-success mt-1">‚úÖ Disponible</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary mt-1">‚ùå No disponible</span>
                                        }
                                    </div>
                                    <div class="col-1 text-end">
                                        <form asp-action="Eliminar" method="post" style="display: inline;" 
                                              onsubmit="return confirm('¬øSeguro que deseas eliminar @producto.Nombre?')">
                                            <input type="hidden" name="id" value="@producto.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>No hay productos registrados.</strong>
                    <p class="mb-0 mt-2">¬°Agrega el primer producto usando el formulario!</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Preview de imagen del producto
        document.getElementById('imagenProductoInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                // Validar tama√±o
                if (file.size > 5 * 1024 * 1024) {
                    alert('La imagen no puede superar 5 MB');
                    this.value = '';
                    return;
                }
                
                // Validar tipo
                const tiposPermitidos = ['image/jpeg', 'image/png', 'image/gif', 'image/webp'];
                if (!tiposPermitidos.includes(file.type)) {
                    alert('Solo se permiten im√°genes JPG, PNG, GIF o WEBP');
                    this.value = '';
                    return;
                }
                
                // Mostrar preview
                const reader = new FileReader();
                reader.onload = function(event) {
                    document.getElementById('previewImgProducto').src = event.target.result;
                    document.getElementById('imagePreviewProducto').style.display = 'block';
                };
                reader.readAsDataURL(file);
            } else {
                document.getElementById('imagePreviewProducto').style.display = 'none';
            }
        });
        
        function limpiarImagenProducto() {
            document.getElementById('imagenProductoInput').value = '';
            document.getElementById('imagePreviewProducto').style.display = 'none';
        }
    </script>
}}