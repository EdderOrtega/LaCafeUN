@model List<ProyectoFinalPOO2.Entities.PedidoEntity>

@{
    ViewData["Title"] = "Mis Pedidos";
}

<div class="container-cafeteria fade-in">
    <div class="text-center mb-5">
        <h1 class="titulo-seccion">üõí Mis Pedidos</h1>
        <p class="lead text-muted">Bienvenido @ViewBag.UsuarioNombre, aqu√≠ puedes ver tus pedidos</p>
    </div>

    @if (TempData["Mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Mensaje"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var pedido in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm hover-card">
                        <div class="card-header bg-primary text-white">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="mb-0">üìã Pedido #@pedido.NumeroPedido</h5>
                                <span class="badge bg-light text-dark">@pedido.Estado</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <p class="mb-1"><strong>üìÖ Fecha:</strong> @pedido.FechaPedido.ToString("dd/MM/yyyy HH:mm")</p>
                                @if (!string.IsNullOrEmpty(pedido.NumeroMesa))
                                {
                                    <p class="mb-1"><strong>ü™ë Mesa:</strong> @pedido.NumeroMesa</p>
                                }
                                <p class="mb-1"><strong>üí≥ Forma de Pago:</strong> @pedido.FormaDePago.Nombre</p>
                            </div>

                            @if (pedido.Detalles != null && pedido.Detalles.Any())
                            {
                                <h6 class="mb-2">üì¶ Productos:</h6>
                                <ul class="list-group mb-3">
                                    @foreach (var detalle in pedido.Detalles)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <div>
                                                <strong>@detalle.Cantidad x</strong> @detalle.Producto.Nombre
                                                @if (!string.IsNullOrEmpty(detalle.Notas))
                                                {
                                                    <br><small class="text-muted">@detalle.Notas</small>
                                                }
                                            </div>
                                            <span class="badge bg-success">$@detalle.Subtotal.ToString("N2")</span>
                                        </li>
                                    }
                                </ul>
                            }

                            @if (!string.IsNullOrEmpty(pedido.Observaciones))
                            {
                                <div class="alert alert-info mb-3">
                                    <strong>üìù Observaciones:</strong> @pedido.Observaciones
                                </div>
                            }

                            <div class="d-flex justify-content-between align-items-center">
                                <h4 class="mb-0 text-success">Total: $@pedido.Total.ToString("N2")</h4>
                                @if (pedido.Estado == "Pendiente")
                                {
                                    <span class="text-warning">‚è≥ En espera</span>
                                }
                                else if (pedido.Estado == "EnPreparacion")
                                {
                                    <span class="text-info">üë®‚Äçüç≥ En preparaci√≥n</span>
                                }
                                else if (pedido.Estado == "Listo")
                                {
                                    <span class="text-success">‚úÖ Listo para recoger</span>
                                }
                                else if (pedido.Estado == "Entregado")
                                {
                                    <span class="text-primary">üì¶ Entregado</span>
                                }
                                else if (pedido.Estado == "Cancelado")
                                {
                                    <span class="text-danger">‚ùå Cancelado</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="alert alert-info text-center p-5">
                    <i class="bi bi-cart-x display-1 text-muted"></i>
                    <h4 class="mt-3">No tienes pedidos a√∫n</h4>
                    <p class="mb-4">Usa la aplicaci√≥n m√≥vil para realizar tus pedidos</p>
                    <a href="/api/docs" class="btn btn-primary">
                        <i class="bi bi-book me-2"></i>Ver documentaci√≥n de la API
                    </a>
                </div>
            </div>
        </div>
    }

    <div class="text-center mt-4">
        <a href="/Home/Dashboard" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Volver al Dashboard
        </a>
    </div>
</div>
