@model ProyectoFinalPOO2.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container py-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow-lg border-0" style="border-radius: 20px;">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <img src="/images/lacafeLogoRed.png" width="120" alt="La Cafe Logo" class="mb-3" />
                        <h2 class="fw-bold titulo-seccion">Iniciar Sesión</h2>
                        <p class="text-muted">Ingresa a tu cuenta de La Cafe</p>
                    </div>

                    @if (TempData["Mensaje"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            <i class="bi bi-check-circle me-2"></i>@TempData["Mensaje"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-controller="Account" asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        
                        <!-- Selector de tipo de cuenta -->
                        <div class="mb-4">
                            <label class="form-label fw-bold" style="color: #831D81;">
                                <i class="bi bi-person-badge me-2"></i>Tipo de Cuenta
                            </label>
                            <div class="btn-group w-100" role="group">
                                <input type="radio" class="btn-check" name="TipoCuenta" id="tipoUsuario" value="Usuario" checked autocomplete="off">
                                <label class="btn btn-outline-primary" for="tipoUsuario">
                                    <i class="bi bi-person me-2"></i>Usuario
                                </label>
                                
                                <input type="radio" class="btn-check" name="TipoCuenta" id="tipoAdmin" value="Administrador" autocomplete="off">
                                <label class="btn btn-outline-danger" for="tipoAdmin">
                                    <i class="bi bi-shield-check me-2"></i>Administrador
                                </label>
                            </div>
                            <small class="text-muted">Selecciona el tipo de cuenta con la que deseas ingresar</small>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold" style="color: #831D81;"></label>
                            <input asp-for="Email" class="form-control form-control-lg" placeholder="correo@ejemplo.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-bold" style="color: #831D81;"></label>
                            <input asp-for="Password" class="form-control form-control-lg" placeholder="••••••••" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-cafeteria btn-lg">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar Sesión
                            </button>
                        </div>

                        <div class="text-center">
                            <p class="text-muted">
                                ¿No tienes cuenta? 
                                <a asp-controller="Account" asp-action="Registro" style="color: #F1592A; font-weight: 600; text-decoration: none;">Regístrate aquí</a>
                            </p>
                            <a asp-controller="Home" asp-action="Index" class="text-muted">← Volver al inicio</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
